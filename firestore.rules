rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }

    match /admins/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /brands/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /collections/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Blog collections
    match /blogs/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /blog_categories/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /blog_tags/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Stock
    match /stock/{id} {
      allow read: if true;
      allow write: if isAdmin();
      
      // Stock history subcollection
      match /stock_history/{historyId} {
        allow read: if isAdmin();
        allow write: if isAdmin();
      }
    }

    // Groups
    match /groups/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orders/{id} {
      allow read: if isAdmin() || request.auth.uid == resource.data.uid;
      allow write: if isAdmin();
    }

    match /products/{id} {
      allow read: if true;
      allow write: if isAdmin();

      match /reviews/{uid} {
        allow read: if true;
        allow write: if isAdmin() || request.auth.uid == uid;
      }
    }

    match /users/{uid} {
      allow read: if isAdmin() || request.auth.uid == uid;
      allow write: if isAdmin() || request.auth.uid == uid;

      match /checkout_sessions/{id} {
        allow read: if isAdmin() || request.auth.uid == uid;
        allow write: if isAdmin() || request.auth.uid == uid;
      }

      match /checkout_sessions_cod/{id} {
        allow read: if isAdmin() || request.auth.uid == uid;
        allow write: if isAdmin() || request.auth.uid == uid;
      }

      match /payments/{id} {
        allow read, write: if false;
      }
    }

    // Reviews collection (top-level if used)
    match /reviews/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
